{
    "name": "verificationapp",
    "version": "1.0.0",
    "description": "Verifying Business Partners with a extension application for SAP BTP",
    "repository": "github:SAP-samples/btp-build-resilient-apps",
    "license": "UNLICENSED",
    "private": true,
    "engines": {
        "node": "^16.15"
    },
    "dependencies": {
        "@sap-cloud-sdk/connectivity": "^2.8.0",
        "@sap-cloud-sdk/core": "^1.54.0",
        "@sap-cloud-sdk/http-client": "^2.8.0",
        "@sap/cds": "^6.1.2",
        "@sap/cloud-sdk-vdm-business-partner-service": "^2.1.0",
        "@sap/hana-client": "^2.13.22",
        "@sap/xb-msg-amqp-v100": "^0.9.58",
        "@sap/xsenv": "^3.3.2",
        "@sap/xssec": "^3.2.13",
        "@xmldom/xmldom": "^0.8.2",
        "express": "^4.18.1",
        "hdb": "^0.19.5",
        "lodash": "^4.17.21",
        "passport": "^0.6.0",
        "supertest": "^6.2.4",
        "tar": "^6.1.11"
    },
    "devDependencies": {
        "@sap/approuter": "11.4.0",
        "@sap/eslint-plugin-ui5-jsdocs": "2.0.x",
        "@sap/hdi-deploy": "4.4.1",
        "@sap/html5-repo-mock": "2.1.0",
        "@sap/ui5-builder-webide-extension": "^1.1.8",
        "@sap/ux-specification": "^1.102.5",
        "@sapui5/ts-types": "1.102.x",
        "@ui5/cli": "2.14.11",
        "bestzip": "2.2.1",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "chai-http": "^4.3.0",
        "chai-subset": "^1.6.0",
        "eslint": "8.23.x",
        "mocha": "^10.1.0",
        "npm-check-updates": "^16.1.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "3.0.2",
        "sqlite3": "5.0.11"
    },
    "scripts": {
        "update-dependencies": "ncu -u",
        "test:odata_negative": "mocha tests/odata-negative.js --timeout 15000 --exit",
        "test:odata": "mocha tests/odata.js --timeout 15000 --exit",
        "start": "npx -n=\"--inspect\" cds run"
    },
    "cds": {
        "features": {
            "fetch_csrf": true
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "db": {
                "kind": "sql",
                "[production]": {
                    "db": {
                        "kind": "hana",
                        "pool": {
                            "acquireTimeoutMillis": 5000,
                            "min": 10,
                            "max": 1000,
                            "fifo": true
                        }
                    }
                }
            },
            "messaging": {
                "kind": "file-based-messaging",
                "[production]": {
                    "kind": "enterprise-messaging-shared"
                },
                "[hybrid]": {
                    "kind": "enterprise-messaging-shared"
                },
                "file": "../msg-box"
            },
            "[production]": {
                "OP_API_BUSINESS_PARTNER_SRV": {
                    "kind": "odata",
                    "model": "srv/external/OP_API_BUSINESS_PARTNER_SRV",
                    "credentials": {
                        "destination": "BusinessPartner",
                        "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER",
                        "requestTimeout": 1000000
                    }
                }
            },
            "[qa]": {
                "requires": {
                    "OP_API_BUSINESS_PARTNER_SRV": {
                        "kind": "odata",
                        "model": "srv/external/OP_API_BUSINESS_PARTNER_SRV",
                        "credentials": {
                            "destination": "BusinessPartner",
                            "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER",
                            "requestTimeout": 1000000
                        }
                    }
                }
            }
        }
    },
    "sapux": [
        "app/businesspartners"
    ],
    "ui5": {
        "dependencies": [
            "@sap/ui5-builder-webide-extension"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "testTimeout": 20000
    }
}